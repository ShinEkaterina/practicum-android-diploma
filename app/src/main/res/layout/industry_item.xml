<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/colorPrimaryVariant">

    <TextView
        android:id="@+id/tvIndustryItem"
        style="@style/TextStyleRegular16_400"
        android:layout_width="@dimen/layout_size_0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_marginEnd="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_6"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/job_placeholder_text" />

    <ImageView
        android:id="@+id/ivSelectedIndustryItem"
        android:layout_width="@dimen/icon_size_48"
        android:layout_height="@dimen/icon_size_48"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_marginBottom="@dimen/margin_6"
        android:layout_marginEnd="@dimen/margin_4"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/image_status_checkbox_circle"
        android:src="@drawable/ic_unselected_circle" />

</LinearLayout>
